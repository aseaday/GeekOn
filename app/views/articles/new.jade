extends ../layout/layout

block content
  div.container
    form(method="post", action="/create_article")
      input(type="hidden", name='_csrf', value=token)
      div
        label title:
        input(type="text", name="title")
      div
        label content:
        input(type="text", name="body")
      div
        input(type="submit", value="Submit")
