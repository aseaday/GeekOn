extends ../layout/layout

block content
  div.row-fluid
    div.span2
      h4 项目列表
    div.span2.offset5
       a.new-project-btn.btn(href='/projects/create') 创建项目
  div.row-fluid.project
    div.span9
      div.row-fluid.project-row
       each project in projects
            div.span4.unit
              div.row-fluid.head
                div.span3.head-img
                  a(href='/projects/'+project._id)
                   img(href='/users/project.provider._id',src='#{project.provider.avatar_url}')
                div.span9.head-info
                  a.title(href='/projects/'+project._id, title=project.name)= project.name
                  br
                  span 项目提供者:
                  a(href="/users/"+project.provider.username)= project.provider.username
                  br
                  span 创建日期:
                  span= moment(project.created_at).format('LLL')
              div.row-fluid.desc
                !{project.description.substring(0, 140)}
              div.row-fluid.inf
                .span4
                  a(href="#")
                    i.icon-heart
                    span 感兴趣
                .span4
                  a(href="#")
                    i.icon-comment
                    span 留言(#{project.comments.length})
                .span4
                  a(href="#")
                    i.icon-star
                    span 收藏
    include ../layout/right-side
