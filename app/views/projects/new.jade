extends ../layout/layout

block content
  .container.session-body
    div.min-inner
      h3 新建项目
      form(method="post", action="/projects/create")
        input(type="hidden", name='_csrf', value=token)
        div.row
          .span2
            span.input-xlarge 项目名
          .span10
            input(type="text", name="name")#project_name
        div.row
          .span2
            span 概要
          .span10
            input.input-xlarge(type="text", name="summary", placeholder="一句话描述")#project_summary
        div.row
          .span2
            label 描述
          .span10
            textarea.input-xlarge(name="description")#project_description
        div.row
          .span2
            input(type="submit", value="创建").btn.btn-primary
