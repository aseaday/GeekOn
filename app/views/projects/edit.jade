extends ../layout/layout

block content
  div.new-project.edit-project
    .new-project-cap
      p 编辑项目
    form.form-horizontal(method="post", action="/projects/"+project._id, enctype="multipart/form-data")
      input(type="hidden", name='_method', value='PUT')
      input(type="hidden", name='_csrf', value=token)
      div.row-fluid
        div.span2
          span 项目名称
          span.icon-asterisk
        div.span10
          input(type="text", name="name",value= project.name)
          span.project_name_error 请输入项目名称
      div.row-fluid
        .span2
          span 项目概要
          span.icon-asterisk
        .span10
          input(type="text",name="preview").project_preview= project.preview
          span.project_preview_error 请输入项目概要
      div.row-fluid
        .span2
          label 项目要求
        .span10
          textarea(name="requirement")= project.requirement
      div.row-fluid.submit
        .span2.offset2.submit-btn
          input(type="submit", value="提交").btn.btn-primary
