block header
  div.navbar.navbar-inverse
    div.navbar-inner
      div.container
  
        a.brand(href="/") GeekOn

        div.nav-collapse.collapse
          ul.nav
            li
              a(href="/articles") 活动
            li
              a(href="/projects") 项目
            li
              a(href="/geeks") 极客
            if locals.user && locals.user.username
              li
                img(src='#{locals.user.avatar_url}',height=35,width=35)
              li
                a(href="/user/#{locals.user._id}") #{locals.user.name}
              li
                a(href="/logout") 登出
            else 
              li
                a(href="/signup") 注册
              li
                .btn-group
                  a.btn.btn-inverse.dropdown-toggle(data-toggle="dropdown",href="#") Login
                    span.caret
                  ul.dropdown-menu 
                    li
                      a(href="login") Login
                    li
                      section
                        img(src="/img/github.png",width=20,height=20) 
                        a(href="/auth/github") By Github