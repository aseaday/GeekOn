extends ../layout/layout

block content
  .content-wrap
   .row
    .span7
      form.form-horizontal(method="post", action="/send_forgot_email", enctype="multipart/form-data")
        input(type="hidden", name='_csrf', value=token)
        .control-group
          label.control-label(for='Email') Email
          .controls
            input#email(type='text', name="email", placeholder='请输入注册邮箱')

        .form-actions
          button.btn.btn-primary(type='submit')提交
          &nbsp;
          a.btn(href='/', title="cancel")取消
