extends ../layout/layout

block main
  h1 Article
block content
  div.article-list
    table.table.table-striped.table-hover
      tr
        th 名称
        th 项目概要
        th 作者
        th 创建时间
      each article in articles
        tr
          td.article-title
            a.title(href='/article/'+article._id, title=article.title) #{article.title}
          td.article-desc !{article.body_html}
          td.article-author hi
          td=formatDate(article.created_at, "%b %d, %Y at %I:%M %p")
        tr
    div.row-fluid
      .span6
        if (pages > 1)
          .pagination
            ul
              != createPagination(pages, page)
