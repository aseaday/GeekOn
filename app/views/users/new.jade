extends ../layout/layout

block content
  div.registration
    div.registration-cap
      p 注册新用户
    p.or or
    div.registration-content
      div.row-fluid
        div.span8
            form.form-horizontal(action="/signup", method="post")
              input(type="hidden", name='_csrf', value=token)
              .control-group
                label.control-label(for='Email') 邮箱
                .controls
                  input#email(type='text', name="email", placeholder='Email', value=user.email)

              .control-group
                label.control-label(for='username') 用户名
                .controls
                  input#username(type='text', name="username", placeholder='Username', value=user.username)

              .control-group
                label.control-label(for='password') 密码
                .controls
                  input#password(type='password', name="password", placeholder='Password')

              .control-group
                label.control-label(for='password') 密码确认
                .controls
                  input#password(type='password', name="password_confirmation", placeholder='Password')
                .offset3
                  button.btn.btn-primary(type='submit') 注册
        div.span4.third-singup
          div.row-fluid
            div.info
              p 您也可以通过如下方式注册:
            div.github-btn.row-fluid
              .span2
                img(src="/img/github.png", alt="")
              .span9.offset1
                a(href="/auth/github") Github
            div.github-btn.row-fluid
              .span2
                img(src="/img/google.png", alt="")
              .span9.offset1
                a(href="#") Google
            div.github-btn.row-fluid
              .span2
                img(src="/img/twitter.png", alt="")
              .span9.offset1
                a(href="#") Twitter


