extends ../layout/layout

block main
  h1 Users
block content
  div.users
    div.row-fluid.users-list
      each user in users
        div.span2.user-unit
          div.row-fluid
            a(href="/users/#{user.username}")
              img(src="#{user.avatar_url}")
          div.row-fluid
            a(href="/users/#{user.username}")
              p #{user.username}

    div.row-fluid
      div.offset4
        if (pages > 1)
          .pagination
            ul
              != createPagination(pages, page)
