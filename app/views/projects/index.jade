extends ../layout/layout

block content
  div.row-fluid
    div.span2
      h4 项目列表
    div.span2.offset5
       a.new-project-btn.btn(href='/create_project') 创建项目
  div.row-fluid.project
    div.span9
      div.row-fluid.project-row
       each project,i in projects
            div.span4.unit
              div.row-fluid.head
                div.span3.head-img
                  a(href='/project/'+project._id)
                   img(href='/user/project.provider._id',src='#{project.provider.avatar_url}')
                div.span9.head-info
                  a.title(href='/project/'+project._id, title=project.name) #{project.name}
                  br
                  span 由
                  a(href="/user/"+project.provider._id)=project.provider.username
                  span 创建于
                  span=formatDate(project.created_at, "%b %d, %Y at %I:%M %p")
              div.row-fluid.desc
                p #{project.preview}
              div.row-fluid.inf
                .span4
                  a(href="#")
                    i.icon-heart
                    span 感兴趣
                .span4
                  a(href="#")
                    i.icon-comment
                    span 留言
                .span4
                  a(href="#")
                    i.icon-star
                    span 收藏
    include ../layout/right-side
